<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorControlNormal">@color/edit_text_color_control</item>
        <item name="colorControlActivated">@color/edit_text_color_control</item>
        <item name="colorControlHighlight">@color/edit_text_color_control</item>
        <item name="colorError">@color/invalid_red</item>
    </style>

    <style name="TextInputLike" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

</resources>